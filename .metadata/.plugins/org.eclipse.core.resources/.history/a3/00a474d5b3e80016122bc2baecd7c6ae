 */
package chapter2Exercises;

import java.util.Scanner;

/**
 * @author TV111790
 *
 */
public class InchesToFeetInteractive {

	/**
	 * @param args
	 */
	public static void main(String[] args) 
	{
		
		int inchesToFeet = 12;
		int inchesNeeded;
		int feet;
		
		Scanner Input = new Scanner(System.in);
		
		System.out.print(" How many inches would you like to convert? ");
		inchesNeeded = Input.nextInt();
		
		feet = (inchesNeeded / inchesToFeet);
		
		System.out.println(" You will need " + feet + " for " + inchesNeeded + " because there are 12 feet in a foot. ");
		
		
		

	}

}
