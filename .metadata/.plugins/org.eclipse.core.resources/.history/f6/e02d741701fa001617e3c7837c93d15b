	System.out.println("*       *       ooooo        *                       *");
	System.out.println("*       *         o          *             *******    *");
	System.out.println("*       **********************             *     *     *");
	System.out.println("*                                          *    **    *");
	System.out.println("*   oooooo                          ooooo  *     *  *");
	System.out.println("****o    o*************************o    o************");
